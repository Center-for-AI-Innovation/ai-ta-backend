{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.15.0",
    "nixpacksPlan": {
      "phases": {
        "myPhase": {
          "name": "ffmpeg (removed: libcrypt1, started to break)",
          "aptPkgs": [
            "ffmpeg",
            "libcrypt1"
          ]
        },
        "setup": {
          "aptPkgs": [
            "libcap-dev"
          ],
          "nixPkgs": [
            "python310",
            "gcc"
          ]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}