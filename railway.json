{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.15.0",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["uv pip install --system -r requirements.txt"]
        },
        "setup": {
          "nixPkgs": ["gcc", "uv"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}
