{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "baseDependencies": {
          "name": "Install build-essential and libc6",
          "aptPkgs": [
            "build-essential",
            "libc6"
          ]
        },
        "installFfmpeg": {
          "name": "Install ffmpeg",
          "dependsOn": [
            "baseDependencies"
          ],
          "aptPkgs": [
            "ffmpeg"
          ]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}