{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.15.0",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "python -m venv --copies /opt/venv && . /opt/venv/bin/activate",
            "pip install pip==23.3.1 uv==0.2.11",
            "uv --python $(which python3.10) pip install -r requirements.txt"
          ],
          "aptPkgs": ["ffmpeg", "tesseract-ocr"]
        },
        "setup": {
          "aptPkgs": ["libcap-dev", "libgl1"],
          "nixPkgs": ["python310", "gcc"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}
